{# src/Sio/BlogBundle/Resources/views/Blog/index.html.twig #}

{% extends "SIOBlogBundle::layout.html.twig" %}

{% block title %}
	Accueil - {{ parent() }}
{% endblock %}

{% block Sioblog_body %}

	<h2>Liste des articles</h2>

	<ul>
		{% for article in articles %}
			<li>
				<a href="{{ path('sio_blog_voir', {'id': article.id}) }}">{{ article.titre }}</a>
				le {{ article.date|date('d/m/Y') }} par {{article.auteur}}
			</li>
		{% else %}
			<li>Pas (encore !) d'articles</li>
		{% endfor %}
	</ul>

{% endblock %}
     