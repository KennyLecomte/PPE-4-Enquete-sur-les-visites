{# src/SIO/BlogBundle/Resources/views/Blog/index.html.twig #}

<html>
	<body>
		<h2>Liste des articles</h2>

	<ul>
		{% for article in articles %}
			<li>
				<a href="{{ path('Sioblog_voir', {'id': article.id}) }}">{{ article.titre }}</a>
				par {{ article.auteur }},
				le {{ article.date|date('d/m/Y') }}
			</li>
		{% else %}
			<li>Pas (encore !) d'articles</li>
		{% endfor %}
	</ul>

	</body>
</html>
     