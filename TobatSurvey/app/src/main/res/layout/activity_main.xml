<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gourdona.tobatsurvey.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="Quelques Informations..."
            android:textSize="20dp" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Ville"
            android:text-decoration="none"


            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Code Postale"

            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Raison"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Quel budget êtes vous prêt à mettre pour un bateau"
            android:textSize="20dp" />


        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/budget"

            />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
